<%- contentFor('title') %>User Settings | EventGenius
<%- contentFor('body') %>
<div class="container mx-auto mt-4">
    <div class="card">
        <div class="card-header">
            <h3><b>User Settings</b></h3>
        </div>
        <div class="card-body">
            <form action="/settings" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="john@doe.com"
                        value="<%- user.email %>" required>
                </div>
                <div class="row mb-lg-3">
                    <div class="col-12 mb-3 col-lg-6 mb-lg-0">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="John Doe"
                            value="<%- user.name %>" required>
                    </div>
                    <div class="col-12 mb-3 col-lg-6 mb-lg-0">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="johndoe"
                            value="<%- user.username %>" required>
                    </div>
                </div>
                <div class="row mb-lg-3">
                    <div class="col-12 mb-3 col-lg-6 mb-lg-0">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="*******"
                            required>
                    </div>
                    <div class="col-12 mb-3 col-lg-6 mb-lg-0">
                        <label for="passwordConfirm" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="passwordConfirm" placeholder="*******"
                            name="passwordConfirm" required>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>