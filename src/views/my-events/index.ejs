<%- contentFor('title') %>My Events
<%- contentFor('body') %>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center align-items-start">
        <h1>My events</h1>
        <a class="btn btn-success" href="/my-events/create" data-bs-toggle="tooltip"
            data-bs-title="Create a new event"><i class="bi bi-plus"></i></a>
    </div>

    <% if (!anyEvents) { %>
        <div class="alert alert-warning mt-4" role="alert">
            You have no events yet. Create one now!
        </div>
    <% } else { %>

        <!-- Upcoming events -->
        <h4 class="mt-4">Upcoming events</h4>

        <% if (upcomingEvents.length === 0) { %>
            <div class="alert alert-warning mt-4" role="alert">
                You have no upcoming events.
            </div>
        <% } else { %>
            <div class="row">
                <% for (const event of upcomingEvents) { %>
                    <%- include("../partials/event", { event }) %>
                <% } %>
            </div>
        <% } %>

        <!-- Past events -->
        <% if (pastEvents.length !== 0) { %>
            <h4 class="mt-4">Past events</h4>

            <div class="row">
                <% for (const event of pastEvents) { %>
                    <%- include("../partials/event", { event }) %>
                <% } %>
            </div>
        <% } %>

    <% } %>
</div>